<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mp3Calar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/griKapali</item>
        <item name="colorPrimaryVariant">@color/gri1</item>
        <item name="colorOnPrimary">@color/whiteTransparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/griKapali</item>
        <item name="editTextColor">@color/whiteTransparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/whiteTransparent</item>
        <item name="android:textColorHint">@color/acikGri</item>
    </style>


    <style name="Theme.Mp3Calar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationView.Active" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>